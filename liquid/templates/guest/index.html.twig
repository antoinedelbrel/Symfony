{% extends 'base.html.twig' %}

{% block title %}Invité{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="evenement">
        <div class="col-lg-12 margin-tb d-flex justify-content-between mb-2">
            <div class="pull-left">
                <h2>Invité</h2>
            </div>
            <div class="pull-right">
                <a class="btn btn-success" href="{{ path('guests_create') }}"> Ajouter un invité</a>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Email</th>
                <th width="280px">Action</th>
            </tr>
            {% for guest in guests %}
            <tr>
                <td>{{ guest.id }}</td>
                <td>{{ guest.name }}</td>
                <td>{{ guest.email }}</td>
                <td>

                    <a class="btn btn-info" href="{{ path('guests_show',{slug: guest.id}) }}">Show</a>

                    <a class="btn btn-primary" href="{{ path('guests_edit',{slug: guest.id}) }}">Edit</a>

                    <a class="btn btn-danger" href="{{ path('guests_delete',{slug: guest.id}) }}">Delete</a>

                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>

{% endblock %}